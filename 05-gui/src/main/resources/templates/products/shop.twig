{% extends '../base.twig' %}

{% block title %}Shop{% endblock %}

{% block row %}

    <div class="card-deck">
        {% for product in products %}
            <div class="col-md-3">
                <div class="card shadow-sm mb-3">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">{{ product.name }}</h4>
                    </div>
                    <img class="card-img-top" src="#" style="" alt="">
                    <div class="card-body">
                        <p class="card-text">{{ product.property }}</p>
                        <a class="btn btn-lg btn-block btn-outline-primary" href="#">Buy</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}